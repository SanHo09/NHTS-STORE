<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox id="sidebar-container" styleClass="sidebar" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom4.nhtsstore.ui.shared.components.sidebar.SidebarFxController">
  
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>
  
  <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="menu-scroll-pane" VBox.vgrow="ALWAYS">
    <VBox fx:id="menuContainer" spacing="10">
      <!-- Menu items will be generated dynamically -->
    </VBox>
  </ScrollPane>
  
  <stylesheets>
    <String fx:value="/css/sidebar.css" />
  </stylesheets>
</VBox>
